
    
    <main>
        <div class="register-page row justify-content-center m-0" ng-app="">
            <div class="register-form-wrapper col-12 col-md-6 col-lg-4">
                <h4 style="text-align:center;margin:2rem 0;">Groovy Online Registration</h4>
                <form action="/subscribe-now/{{selectpackage}}" enctype="multipart/form-data" method="post">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="coverage" role="tabpanel" aria-labelledby="coverage-tab">
                            <!--Coverage Area-->
                            <div class="row multistep justify-content-center" style="margin-bottom:50px;">
                                <div class="col-xs-4 multistep-step current">
                                    <div class="text-center multistep-stepname">Coverage Area</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                                <div class="col-xs-4 multistep-step next">
                                    <div class="text-center multistep-stepname">Your Detail</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                                <div class="col-xs-4 multistep-step next">
                                    <div class="text-center multistep-stepname">Your Order</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="city">Select City :</label>
                                <select class="form-control" id="city" type="city" name="city" onchange="selectRegion()">
                                    <option disabled="disabled" selected="selected" value="">Select City</option>
                                    <option value="Jakarta Utara">Jakarta Utara</option>
                                    <option value="Jakarta Pusat">Jakarta Pusat</option>
                                    <option value="Jakarta Selatan">Jakarta Selatan</option>
                                    <option value="Jakarta Barat">Jakarta Barat</option>
                                    <option value="Jakarta Timur">Jakarta Timur</option>
                                </select>
                            </div>
                            <div id="type">
                                <label class="form-control-label" for="type">Tipe - <span style="font-weight:300;">Type</label>
                                <div id="type" class="form-check">
                                    <input onclick="javascript:typeCheck();" class="form-check-input" type="radio" id="apartment" name="typeselect" value="apartment">
                                    <label class="form-control-label" style="font-weight:300;">
                                        Apartemen / Apartment
                                    </label>
                                </div>
                                <div id="type" class="form-check">
                                    <input onclick="javascript:typeCheck();" class="form-check-input" type="radio" id="residential" name="typeselect" value="residential">
                                    <label class="form-control-label" style="font-weight:300;">
                                        Perumahan / Residential
                                    </label>
                                </div> 
                            </div>
                            <div id="location-apartment" class="form-group">
                                <label class="form-control-label" for="Lokasi">Lokasi - <span style="font-weight:300;">Location</span></label>
                                <select onchange="selectLocationApartment()" class="form-control" id="locationselectapartment" name="locationselectapartment">
                                    <option disabled="disabled" selected="selected" value="">Select Apartment</option>
                                    <option value="[Not Coverage]">[Not Coverage]</option>
                                </select>
                            </div>
                            <div id="location-residential" class="form-group">
                                <label class="form-control-label" for="Lokasi">Lokasi - <span style="font-weight:300;">Location</span></label>
                                <select onchange="selectLocationResidential()" class="form-control" id="locationselectresidential" name="locationselectresidential">
                                    <option disabled="disabled" selected="selected" value="">Select Residential</option>
                                    <option value="[Not Coverage]">[Not Coverage]</option>
                                </select>
                            </div>
                            <div id="tower" class="form-group">
                                <label class="form-control-label" for="Lokasi">Gedung - <span style="font-weight:300;">Tower</span></label>
                                <select onchange="selectTower()" class="form-control" id="towerselect" name="towerselect">
                                    <option disabled="disabled" selected="selected" value="">Select Tower</option>
                                    <option value="[Not Coverage]">[Not Coverage]</option>
                                </select>
                            </div>
                            <div id="floor" class="form-group">
                                <label class="form-control-label" for="Lokasi">Lantai - <span style="font-weight:300;">Floor</span></label>
                                <select onchange="selectFloor()" class="form-control" id="floorselect" name="floorselect">
                                    <option disabled="disabled" selected="selected" value="">Select Floor</option>
                                    <option value="[Not Coverage]">[Not Coverage]</option>
                                </select>
                            </div>
                            <div id="unit" class="form-group">
                                <label class="form-control-label" for="Unit">Unit - <span style="font-weight:300;">Unit</span></label>
                                <select onchange="selectUnit()" class="form-control" id="unitSelect" name="unitSelect">
                                    <option disabled="disabled" selected="selected" value="">Select Unit</option>
                                    <option value="[Not Coverage]">[Not Coverage]</option>
                                </select>
                            </div>
                            <div id="street" class="form-group">
                                <label class="form-control-label" for="Lokasi">Blok/Jalan - <span style="font-weight:300;">Block/Street</span></label>
                                <select onchange="selectstreet()" class="form-control" id="blokstreetSelect" name="blokstreetSelect">
                                    <option disabled="disabled" selected="selected" value="">Select Block/Street</option>
                                    <option value="[Not Coverage]">[Not Coverage]</option>
                                </select>
                            </div>
                            <div id="no" class="form-group">
                                <label class="form-control-label" for="Lokasi">No - <span style="font-weight:300;">No</span></label>
                                <select onchange="selectno()" class="form-control" id="noSelect" name="noSelect">
                                    <option disabled="disabled" selected="selected" value="">Select No</option>
                                    <option value="[Not Coverage]">[Not Coverage]</option>
                                </select>
                            </div>
                            
                            <div class="form-group" id="notcoverage">
                                <p style="font-family:'Roboto';font-size:12px;font-weight:300;margin-top:1rem;"><b>Not covered ?</b> We apologize for your inconvenience.Please input your area in <a href="/subscribe-inquiry-form">here</a>.</p>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="customer-data" role="tabpanel" aria-labelledby="customer-data-tab">
                            <!--Your Detail-->
                            <div class="row multistep justify-content-center" style="margin-bottom:50px;">
                                <div class="col-xs-4 multistep-step complete">
                                    <div class="text-center multistep-stepname">Coverage Area</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                                <div class="col-xs-4 multistep-step current">
                                    <div class="text-center multistep-stepname">Your Detail</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                                <div class="col-xs-4 multistep-step next">
                                    <div class="text-center multistep-stepname">Your Order</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                            </div>
                            <div class="form-group">
                                <label for="fullname">Full Name <span style="color:red;">*</span> :</label>
                                <input class="form-control" id="fullname" type="text" placeholder="eg: John Doe" name="fullname" ng-model="fullname"/>
                            </div>
                            <div class="form-group">
                                <label for="uploadKTP">National Identity Card (KTP) <span style="color:red;">*</span></label>
                                <input class="form-control-file" type="file" id="uploadKTP" name="uploadKTP"/>
                                <small class="form-text text-muted">Please upload your ID (KTP/Passport) for a faster registration process.</small>
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone :</label>
                                <input class="form-control" id="phone" type="text" placeholder="eg: 021++++++" name="phone" ng-model="phone" />
                            </div>
                            <div class="form-group">
                                <label for="mobilephone">Mobile Phone <span style="color:red;">*</span> :</label>
                                <input class="form-control" id="mobilephone" type="text" placeholder="eg: 081234++++" name="mobilephone" ng-model="mobilephone"/>
                            </div>
                            <div class="form-group">
                                <label for="email">Email <span style="color:red;">*</span> :</label>
                                <input class="form-control" id="email" type="email" placeholder="eg: johndoe@mail.com" name="email" ng-model="email"/>
                                <small class="form-text text-muted" id="emailHelp">Please fill your email address correctly, we will send a confirmation and groovy billing statement to your email address.</small>
                            </div>
                        </div>
                    
                        <div class="tab-pane fade" id="summary" role="tabpanel" aria-labelledby="summary-tab">
                            <!--Your Order-->
                            <div class="row multistep justify-content-center" style="margin-bottom:50px;">
                                <div class="col-xs-4 multistep-step complete">
                                    <div class="text-center multistep-stepname">Coverage Area</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                                <div class="col-xs-4 multistep-step complete">
                                    <div class="text-center multistep-stepname">Your Detail</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                                <div class="col-xs-4 multistep-step current">
                                    <div class="text-center multistep-stepname">Your Order</div>
                                    <div class="progress">
                                        <div class="progress-bar"></div>
                                    </div><a class="multistep-dot"></a></div>
                            </div><br/>
                            <table class="broadband-fo-register-summary">
                                <tr>
                                    <td >Full Name</td>
                                    <td style="padding-left:1rem;" ng-bind="fullname"></td>
                                </tr>
                                <tr>
                                    <td >Phone</td>
                                    <td style="padding-left:1rem;" ng-bind="phone"></td>
                                </tr>
                                <tr>
                                    <td >Mobile Phone</td>
                                    <td style="padding-left:1rem;" ng-bind="mobilephone"></td>
                                </tr>
                                <tr>
                                    <td >Email</td>
                                    <td style="padding-left:1rem;" ng-bind="email"></td>
                                </tr>
                                <tr>
                                    <td >Package</td>
                                    <td style="text-transform: capitalize;padding-left:1rem;">Level {{selectpackage}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br /><br />
                    <div class="nav  justify-content-center" id="myTab" role="tablist" style="margin-bottom:2rem;">
                        <a class="groovy-button-grey" id="coverage-tab" data-toggle="tab" href="#coverage" role="tab" aria-controls="home">Back</a>
                        <span>&nbsp; </span>
                        <a class="groovy-button-grey" id="customer-prev-tab" data-toggle="tab" href="#customer-data" role="tab" aria-controls="customer-data">Back</a>
                        <span>&nbsp;</span>
                        <a class="groovy-button" id="customer-data-tab" data-toggle="tab" href="#customer-data" role="tab" aria-controls="customer-data">Next Step</a>
                        <span>&nbsp; </span>
                        <a class="groovy-button" id="summary-tab" data-toggle="tab" href="#summary" role="tab" aria-controls="summary">Next Step</a>
                        <span>&nbsp;</span>
                        <input class="groovy-button" id="registerBroadbandFo" type="submit" value="Confirm" />
                    </div>
                </form>
            </div>
            
            <div class="register-form-wrapper col-12 col-md-6 col-lg-1"></div>
            
            <div class="register-form-wrapper col-12 col-md-6 col-lg-3" style="padding-top:8rem;">
                <div class="card-help" style="box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0);padding:1rem;">
                    <h5 style="color:#fc592e;">Need help ordering?</h5>
                    <p style="color:#333;">Call Us :</p>
                    <p style="color:#333">+62 21 5276616</p>
                </div>
            </div>
        </div>
    </main>  
    <script src="/js/subscribes.js"></script>
    