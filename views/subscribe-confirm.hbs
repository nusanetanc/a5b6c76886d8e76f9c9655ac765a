<main style="height:100vh;">
    <div class="register-page row justify-content-center align-items-center m-0"  style="height:100%;">
        <div class="register-form-wrapper col-12 col-md-6 col-lg-4 p-0">
            <h4 style="text-align:center;margin:2rem 0 3rem 0;">Groovy Payment Confirmation</h4>
            
            <form action="" enctype="multipart/form-data" method="post">
                
                <div class="form-group">
                    <label for="id">ID <span style="color:red;">*</span> :</label>
                    <input class="form-control" id="id" type="text" name="id"/>
                </div>
                <div class="form-group">
                    <label for="no-invoice">No Invoice <span style="color:red;">*</span> :</label>
                    <input class="form-control" id="phone" type="text" name="phone"/>
                </div>
                <div class="form-group">
                    <label for="payConfirm">Pay Confirm <span style="color:red;">*</span></label>
                    <input class="form-control-file" type="file" id="photoPayConfirm" name="photoPayConfirm"/>
                    <small class="form-text text-muted">Please upload proof of payment.</small>
                </div>
                <div class="form-group text-center" style="padding-top:1rem;">
                    <input class="groovy-button" id="subPayConfirm" type="submit" value="Confirm" />
                </div>
                
            </form>
        </div>
        
    </div>
</main>